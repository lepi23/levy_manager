<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tietokannan hallinta sovellus</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="navi">
        <ul>
            <li><a href="./">Lis√§ykset</a></li>
            <li><a href="./suomilevyt">suomilevyt</a></li>
            <li><a href="./ulkomaiset_levyt">Ulkomaiset</a></li>
        </ul>
    </div>
    <h1>Tietokannan hallinta sovellus</h1>
    <div class="container form">
      <%# Create new data %>
      <div>Luo suomilevy</div>
      <form action="/suomilevyt/levyt" method="POST">
        <div class="entry">
          <label for="aname">Artistin nimi</label>
          <input type="text" placeholder="Artistin nimi" name="aname" />
        </div>
        <div class="entry">
          <label for="rname">Levyn nimi</label>
          <input type="text" placeholder="Levyn nimi" name="rname" />
        </div>
        <div class="entry">
          <label for="price">Hinta</label>
          <input type="text" placeholder="Hinta" name="price" />
        </div>
        <button class="button button-block" type="submit">Luo</button>
      </form>
    </div>
    <%# read from database %>
    <div class="container">
      <table>
        <thead>
          <tr>
            <th colspan="4"><div>Lue suomilevyt</div></th>
          </tr>
          <tr>
            <th>Artistin nimi</th>
            <th>Levyn nimi</th>
            <th>Hinta</th>
            <th>Toiminnot</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i = 0; i < suomilevyt.length; i++) { %>
          <tr>
            <td><%= suomilevyt[i].aname %></td>
            <td><%= suomilevyt[i].rname %></td>
            <td><%= suomilevyt[i].price %></td>
            <td>
              <button
                class="button editButton"
                data-aname="<%= suomilevyt[i].aname %>"
                data-rname="<%= suomilevyt[i].rname %>"
                data-price="<%= suomilevyt[i].price %>"
              >
                Muokkaa
              </button>
              <button
                class="button deleteButton"
                data-aname="<%= suomilevyt[i].aname %>"
                data-rname="<%= suomilevyt[i].rname %>"
                data-price="<%= suomilevyt[i].price %>"
              >
                Poista
              </button>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <script src="/main.js"></script>
  </body>
</html>
